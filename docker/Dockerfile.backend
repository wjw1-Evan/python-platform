FROM python:3.10-slim

WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# 复制requirements文件
COPY backend/requirements.txt .

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制项目文件
COPY backend/ .

# 暴露端口
EXPOSE 8000

# 启动命令（根据服务不同会有所不同）
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
